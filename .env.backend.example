# Backend (FastAPI) - variables de entorno de ejemplo (no usar en producción tal cual)
# Copia este archivo como .env y ajusta los valores. No pegues secretos en claro en commits.

# Información de la app
APP_NAME=Consultor RUC SUNAT
APP_VERSION=1.0.0
APP_DESCRIPTION=API para consultar información de empresas en SUNAT

# Servidor
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# CORS
ALLOWED_ORIGINS=http://localhost:5173,https://localhost:5173
ALLOW_CREDENTIALS=true
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# Base de datos (Neon)
NEON_CONNECTION_STRING=postgresql://USER:PASSWORD@HOST/DB?sslmode=require

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Scraping
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000

# WhatsApp (puedes dejar vacíos si no se usan)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=whatsapp_verify_token_2025
WHATSAPP_WEBHOOK_ENDPOINT=/api/webhooks/whatsapp
WHATSAPP_RATE_LIMIT_PER_MINUTE=100
WHATSAPP_RETRY_ATTEMPTS=3
WHATSAPP_RETRY_DELAY_SECONDS=30
WHATSAPP_WORK_HOURS_START=08:00
WHATSAPP_WORK_HOURS_END=18:00
WHATSAPP_TIMEZONE=America/Lima

# Redis / tareas en background
REDIS_URL=redis://localhost:6379/0
BACKGROUND_TASKS_ENABLED=true
BACKGROUND_TASKS_INTERVAL_SECONDS=30

# Endpoints de depuración (no habilitar en producción)
DEBUG_ENDPOINTS=false

# Scraping OSCE (timeouts y reintentos; ajusta según red y estabilidad del sitio)
OSCE_TIMEOUT_MS=60000            # Timeout general de navegación (ms)
OSCE_SEARCH_TIMEOUT_MS=10000     # Timeout para búsqueda inicial (ms)
OSCE_RETRY_ATTEMPTS=2            # Reintentos adicionales (total = intentos + 1)
OSCE_RETRY_DELAY_MS=1500         # Espera entre reintentos (ms)

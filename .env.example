# Configuración de Base de Datos Neon PostgreSQL
NEON_CONNECTION_STRING=postgresql://user:password@host.neon.tech/dbname?sslmode=require
NEON_DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Configuración de la aplicación
DEBUG=True
LOG_LEVEL=INFO

# Configuración de CORS
ALLOWED_ORIGINS=["http://localhost:3000", "https://tu-app.vercel.app"]

# Configuración de scraping
HEADLESS_BROWSER=true
